<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="MI2_TabSystemTemplates.lua"/>

	<Button name="MI2_TabSystemButtonArtTemplate" mixin="MI2_TabSystemButtonArtMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture rotation="180" parentKey="Left" file="Interface\ChatFrame\ChatFrameTab-BGRight" parentArray="RotatedTextures">
					<Anchors>
						<Anchor point="TOPLEFT" Y="2"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="Right" file="Interface\ChatFrame\ChatFrameTab-BGLeft" parentArray="RotatedTextures">
					<Anchors>
						<Anchor point="TOPRIGHT" Y="2"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="Middle" file="Interface\ChatFrame\ChatFrameTab-BGMid" parentArray="RotatedTextures" horizTile="true">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Left" relativePoint="RIGHT"/>
						<Anchor point="RIGHT" relativeKey="$parent.Right" relativePoint="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture rotation="180" parentKey="LeftActive" file="Interface\ChatFrame\ChatFrameTab-SelectedRight" parentArray="RotatedTextures" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="RightActive" file="Interface\ChatFrame\ChatFrameTab-SelectedLeft" parentArray="RotatedTextures" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPRIGHT"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="MiddleActive" file="Interface\ChatFrame\ChatFrameTab-SelectedMid" parentArray="RotatedTextures"  horizTile="true" alphaMode="ADD">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.LeftActive" relativePoint="RIGHT"/>
						<Anchor point="RIGHT" relativeKey="$parent.RightActive" relativePoint="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture rotation="180" parentKey="LeftHighlight" file="Interface\ChatFrame\ChatFrameTab-HighlightRight" parentArray="RotatedTextures" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" Y="2"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="RightHighlight" file="Interface\ChatFrame\ChatFrameTab-HighlightLeft" parentArray="RotatedTextures" 	alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPRIGHT" Y="2"/>
					</Anchors>
				</Texture>
				<Texture rotation="180" parentKey="MiddleHighlight" file="Interface\ChatFrame\ChatFrameTab-HighlightMid" parentArray="RotatedTextures" horizTile="true" alphaMode="ADD">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.LeftHighlight" relativePoint="RIGHT"/>
						<Anchor point="RIGHT" relativeKey="$parent.RightHighlight" relativePoint="LEFT"/>
					</Anchors>
				</Texture>

			</Layer>
		</Layers>
		<ButtonText parentKey="Text"/>
		<NormalFont style="GameFontNormalSmall"/>
		<HighlightFont style="GameFontHighlightSmall"/>
	</Button>

	<Button name="MI2_TabSystemButtonTemplate" inherits="MI2_TabSystemButtonArtTemplate" mixin="MI2_TabSystemButtonMixin" motionScriptsWhileDisabled="true" virtual="true">
		<Size x="10" y="16"/>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>
	
	<Frame name="MI2_TabSystemTemplate" mixin="MI2_TabSystemMixin" inherits="HorizontalLayoutFrame" virtual="true">
		<KeyValues>
			<!--
			tabSelectedCallback: callback when a tab is selected, passed in the tabID that's generated by AddTab. (tabID) -> nil
			maxTabWidth: max width of a tab, including side textures. nil means no maximum.
			minTabWidth: min width of a tab, including side textures. nil means no minimum.
			tabTemplate: what button template to use for tabs. Must support the behavior from MI2_TabSystemButtonMixin.
			spacing: from HorizontalLayoutFrame.
			tabSelectSound: what sound to play when tabs are clicked.

			<KeyValue key="tabSelectedCallback" value="..." type="function"/>
			<KeyValue key="minTabWidth" value="60" type="number"/>
			<KeyValue key="maxTabWidth" value="100" type="number"/>
			-->
			<KeyValue key="tabTemplate" value="MI2_TabSystemButtonTemplate" type="string"/>
			<KeyValue key="spacing" value="1" type="number"/>
			<KeyValue key="tabSelectSound" value="SOUNDKIT.IG_CHARACTER_INFO_TAB" type="global"/>
		</KeyValues>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
